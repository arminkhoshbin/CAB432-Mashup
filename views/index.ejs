	<% include header %>
		<div class="container">
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-11">
					<div class="events" ng-controller="indexController">
						<h1 id="events">Your Events</h1>
						<div ng-if="events == ''" class="alert alert-danger no-event" role="alert">
							You Don't have any events planned.
						</div>
						<div class="panel panel-default" ng-repeat="(key, value) in events | groupBy: 'start.dateDay'">
						  <div class="panel-heading">{{ key }}</div>
						  <!-- Table -->
						  <table class="table table-hover">
						  	<thead>
					        <tr>
					          <th>Event</th>
					          <th>Organizer</th>
					          <th>Location</th>
					          <th></th>
					        </tr>
			      		</thead>
			      		<tbody>
					        <tr ng-repeat="event in value" id="{{ event.id }}">
					          <td>{{ event.summary }}</td>
					          <td>{{ event.organizer.displayName }} ({{ event.organizer.email }})</td>
					          <td>{{ event.location }}</td>
					          <td><a href="/event/{{ event.id }}">More</a></td>
					        </tr>
			      		</tbody>
						  </table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% include scripts %>
	</body>
	</html>